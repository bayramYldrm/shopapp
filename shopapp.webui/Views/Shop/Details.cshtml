</div> <hr>
    <div class="review-list">
        <ul>
            <li>
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    foreach (var comment in Model.Comments)
                    {
                        <div style="height: 1px; background-color: #ffb33e;"></div>
                        <div class="d-flex mt-4">
                            <div class="left">
                                <span>
                                    <!-- İlgili görsel veya ikon buraya gelebilir -->
                                </span>
                            </div>
                            <div class="right">
                                @{
                                    // Votepoint değeri
                                    int votePoint = comment.VotePoint;
                                    
                                    // Dolu yıldız sayısı
                                    int filledStars = votePoint;

                                    // Boş yıldız sayısı
                                    int emptyStars = 5 - votePoint;

                                    // Dolu yıldızları göstermek için
                                    string filledStarHtml = "<i class='fas fa-star' style='color: #ffb33e;'></i>";

                                    // Boş yıldızları göstermek için
                                    string emptyStarHtml = "<i class='far fa-star' style='color: #ffb33e;'></i>";
                                }

                                <h4 style="font-size: 16px;">
                                    @comment.UserName &nbsp;&nbsp; &nbsp;  @comment.VotePoint &nbsp;
                                    @for (int i = 0; i < filledStars; i++)
                                    {
                                        @Html.Raw(filledStarHtml)
                                    }
                                    @for (int i = 0; i < emptyStars; i++)
                                    {
                                        @Html.Raw(emptyStarHtml)
                                    }
                                </h4>

                                <span class="gig-rating text-body-2" style="font-size: 12px;">@comment.CommentIcon</span>
                                <div class="country d-flex align-items-center">
                                    <!-- Ülke bilgisi veya başka bir bilgi buraya gelebilir -->
                                </div>
                                <div class="review-description">
                                    <p style="font-size: 15px;">@comment.CommentText</p>
                                </div>
                                <span class="publish py-3 d-inline-block w-100">Published @comment.CommentDate.ToShortDateString() @comment.CommentDate.ToShortTimeString()
</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Henüz yorum yok.</p>
                }

            </li>
        </ul>
    </div>
</div>


