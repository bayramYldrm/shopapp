@model ContactModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact us Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
    using shopapp.webui.Models;
#line default
    body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }
        .banner {
            text-align: center;
            background-color: #ffffff;
            margin: 0 auto;
        }
        .banner img {
            max-width: 100%;
            height: auto;
        }
        .contact-form {
            padding: 40px 0;
            margin: 0 10px;
        }
        .form-container {
            max-width: 40%;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .contact-form h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #ccc;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-container label {
            display: block;
            font-weight: bold;
            color: #ccc
            
        }
        .form-container input,
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 1rem;
            resize: vertical;
        }
        .submit-button {
            padding: 10px 20px;
            background-color: #1a5db5;
            border: none;
            color: white;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
        }
        .contact-info {
            text-align: center;
            padding: 50px 0;
            background-color: #f7f7f7;
        }
        .contact-info h2 {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <section class="banner">
        <h1>Get in Touch With Us</h1>
        <p>We're here to answer any questions you may have.</p>
    </section>
    <section class="contact-form">
        <div class="form-container bg-dark">
            <h2>Your Details</h2>
        <form asp-controller="Home" asp-action="ContactCreate" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Message" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-10">
                    @* <input class="form-control" asp-for="Message"> *@
                    <textarea class="form-control" asp-for="Message" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>

            <!-- Diğer inputlar için aynı yapıyı tekrarlayın -->
            
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>

        </div>
    </section>
    <section class="contact-info">
        <h2>Contact Information</h2>
        <address>
            WORLD THUNDER TECHNOLOGIES<br>
            ANKARA - TURKEY<br>
            Phone: <a href="tel:0312-000-00-00">0312-000-00-00</a><br>
            Email: <a href="mailto:wtt@gmail.com">wtt@gmail.com</a>
        </address>
    </section>

    <script>
        function openNavbar() {
            const navMenu = document.getElementById("nav-menu");
            navMenu.classList.toggle("active");
        }
    </script>
</body>
