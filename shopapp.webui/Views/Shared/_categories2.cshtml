@model List<Category>

<div class="list-group list-group-horizontal">
		        @foreach (var item in Model)
            {
                <a asp-controller="Shop" 
                asp-action="List" 
                asp-route-category="@item.Url" 
                class="list-group-item @(ViewBag.SelectedCategory == item.Url ? "active" : "") flex-grow-1">
                    @item.Name
                </a>
            }
</div>